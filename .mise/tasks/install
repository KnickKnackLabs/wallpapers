#!/usr/bin/env bash
#MISE description="Show how to install the 'wp' alias"
set -e

REPO_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")/../.." && pwd)"

gum style --bold --foreground 141 "Installing wp command"
echo ""

gum style --foreground 245 "Add this alias to your shell config (~/.zshrc, ~/.bashrc, etc.):"
echo ""

gum style --foreground 117 "  alias wp='mise -C \"$REPO_DIR\" run'"

echo ""
gum style --foreground 245 "Then reload your shell:"
echo ""
gum style --foreground 117 "  source ~/.zshrc  # or ~/.bashrc"

echo ""
gum style --foreground 46 --bold "Benefits of the alias approach:"
echo ""
echo "  - Shell completions work automatically (if mise completions are set up)"
echo "  - No wrapper script to maintain"
echo "  - Works from anywhere in your filesystem"

echo ""
gum style --foreground 141 --bold "Example usage:"
echo ""
gum style --foreground 117 "  wp quick          # Quick generate"
gum style --foreground 117 "  wp goto <name>    # Switch workspace"
gum style --foreground 117 "  wp apply --all    # Apply all wallpapers"
gum style --foreground 117 "  wp tutorial       # Interactive tutorial"
