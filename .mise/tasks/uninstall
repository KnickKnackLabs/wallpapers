#!/usr/bin/env bash
#MISE description="Remove 'wp' command from ~/.local/bin/"
set -e

BIN_FILE="$HOME/.local/bin/wp"

gum style --bold --foreground 141 "üßπ Uninstalling wp command..."
echo ""

if [ -f "$BIN_FILE" ]; then
    rm "$BIN_FILE"
    gum style --foreground 46 "‚úÖ Removed $BIN_FILE"
else
    gum style --foreground 214 "‚è≠Ô∏è  Not installed (file not found)"
fi
